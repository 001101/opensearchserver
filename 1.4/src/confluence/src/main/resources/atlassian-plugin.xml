<atlassian-plugin key="${project.groupId}.${project.artifactId}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}" />
    </plugin-info>
  
<component-import key="pluginSettingsFactory" interface="com.atlassian.sal.api.pluginsettings.PluginSettingsFactory" />
    <web-section key="opensearchserver" name="OpenSearchServer" i18n-name-key="section.opensearchserver.one.name" location="system.admin" weight="105">
        <description key="section.opensearchserver.one.desc">This is selection for OpenSearchServer</description>
        <label key="OpenSearchServer" />
    </web-section>
     <web-item key="configuration" name="OpenSearchServer" section="system.admin/opensearchserver" weight="10">
        <description key="item.opensearchserver.home.desc">Configuration for OpenSearchServer</description>
        <label key="Configuration" />
      <link linkId="add-draft-label-action">/plugins/opensearchserver/opensearchserver.action</link>
    </web-item>
    <xwork name="OpenSearchServer indexation" key="opensearchserver-action">
        <description>This action index the documentation to OpenSearchServer index</description>
        <package name="opensearchserver" extends="default" namespace="/plugins/opensearchserver">
            <default-interceptor-ref name="validatingStack" />
            <action name="opensearchserver" class="com.jaeksoft.searchlib.confluence.OpenSearchServerAction">
                <result name="success" type="velocity">/templates/opensearchserver/opensearchserver.vm</result>
            </action>
        </package>
    </xwork>
    </atlassian-plugin>