<configuration>
	<indices>
		<index name="index" remoteUrl="http://localhost:8080/" />
	</indices>
	<schema>
		<analyzers>
			<analyzer name="StandardAnalyzer" lang="fr"
				tokenizer="LetterOrDigitTokenizerFactory">
				<filter class="LowerCaseFilter" />
				<filter class="ISOLatin1AccentFilter" />
			</analyzer>
			<analyzer name="TextAnalyzer" lang="en"
				tokenizer="LetterOrDigitTokenizerFactory">
				<filter class="LowerCaseFilter" />
				<filter class="SnowballEnglishFilter" />
			</analyzer>
			<analyzer name="TextAnalyzerHighlight" lang="fr"
				tokenizer="LetterOrDigitTokenizerFactory">
				<filter class="LowerCaseFilter" />
				<filter class="ISOLatin1AccentFilter" />
				<filter class="FrenchStemFilter" />
			</analyzer>
			<analyzer name="TextAnalyzer" lang="fr"
				tokenizer="LetterOrDigitTokenizerFactory">
				<filter class="LowerCaseFilter" />
				<filter class="ISOLatin1AccentFilter" />
				<filter class="FrenchStemFilter" />
			</analyzer>
			<analyzer name="TextAnalyzer" lang="de"
				tokenizer="LetterOrDigitTokenizerFactory">
				<filter class="LowerCaseFilter" />
				<filter class="ISOLatin1AccentFilter" />
				<filter class="SnowballGermanFilter" />
			</analyzer>
		</analyzers>
		<fields default="description" unique="id">
			<field name="id" indexed="yes" stored="yes" />
			<field name="description" indexed="yes" stored="yes" nalyzer="TextAnalyzer" termVector="positions_offsets" />
			<field name="title" analyzer="TextAnalyzer" stored="yes"
				indexed="yes" termVector="positions_offsets" />
		</fields>
	</schema>
	
	<requests>
		<request name="search" defaultOperator="and" phraseSlop="2"
			start="0" rows="10" lang="fr">
			<query>$$</query>
			<returnFields>id,description,title</returnFields>
			<highlighting>
                <field tag="b" name="title" />
                <field tag="b" name="description" maxSnippetNumber="1"
                    maxSnippetSize="300" separator="[...]" fragmenterClass="SentenceFragmenter" />
            </highlighting>
		</request>
		
	</requests>
</configuration>