<?xml version="1.0" encoding="UTF-8" ?>
<project name="doc">

	<property environment="env" />

	<import file="${env.DITA_HOME}/conductor.xml" />

	<target name="en" depends="use-init">
		<antcall target="dita2xhtml">
			<param name="args.input" value="en/dita/doc_index.ditamap" />
			<param name="output.dir" value="en/html" />
		</antcall>
	</target>

	<target name="fr" depends="use-init">
		<antcall target="dita2xhtml">
			<param name="args.input" value="fr/dita/doc_index.ditamap" />
			<param name="output.dir" value="fr/html" />
		</antcall>
	</target>

	<target name="all" depends="en,fr" />

</project>