<requests>
	<request name="fileSearch" phraseSlop="2" defaultOperator="OR"
		start="0" rows="10" lang="fr">

		<query>path:($$)^10 OR path:("$$")^10 OR
			content:($$)^10 OR content:("$$")^10 OR
			title:($$)^10 OR title:("$$")^10 OR
			originalPath:($$)
        </query>
        
		<returnFields>
			<field name="path" />
			<field name="content" />
			<field name="originalPath" />
			<field name="fileSystemDate" />
		</returnFields>

		<snippet>
			<field name="path" tag="b" maxDocChar="2147483647" separator="..."
				maxSnippetSize="200" maxSnippetNumber="1" fragmenterClass="NoFragmenter" />
			<field name="title" tag="b" maxDocChar="2147483647"
				separator="..." maxSnippetSize="50" maxSnippetNumber="1"
				fragmenterClass="SentenceFragmenter" />
			<field name="content" tag="b" maxDocChar="2147483647"
				separator="..." maxSnippetSize="200" maxSnippetNumber="1"
				fragmenterClass="SentenceFragmenter" />
		</snippet>
	</request>
</requests>