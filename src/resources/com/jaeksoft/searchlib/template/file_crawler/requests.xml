<requests>
	<request name="fileSearch" phraseSlop="2" defaultOperator="AND"
		start="0" rows="10" lang="en">

		<query>uri:($$)^10 OR uri:("$$")^10 OR
			content:($$)^10 OR content:("$$")^10 OR
			title:($$)^10 OR title:("$$")^10 OR
			originalUri:($$)
        </query>
      
		<returnFields>
			<field name="uri" />
			<field name="content" />
			<field name="originalUri" />
			<field name="fileSystemDate" />
		</returnFields>

	</request>
	<request name="search" phraseSlop="2" defaultOperator="OR"
		start="0" rows="10" lang="en">

		<query>$$</query>
		
		<returnFields>
			<field name="uri" />
			<field name="content" />
			<field name="originalUri" />
			<field name="fileSystemDate" />
		</returnFields>

	</request>
</requests>