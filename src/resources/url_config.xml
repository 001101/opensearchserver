<configuration>
	<indices>
		<index name="url" searchCache="100" filterCache="100"
			fieldCache="500" />
	</indices>
	<schema>
		<fields default="url" unique="url">
			<field name="lang" indexed="yes" stored="yes" />
			<field name="langMethod" indexed="yes" stored="yes" />
			<field name="contentBaseType" indexed="yes" stored="yes" />
			<field name="contentTypeCharset" indexed="yes" stored="yes" />
			<field name="contentEncoding" indexed="yes" stored="yes" />
			<field name="contentLength" indexed="yes" stored="yes" />
			<field name="url" indexed="yes" stored="yes" />
			<field name="outlink" indexed="yes" />
			<field name="inlink" indexed="yes" />
			<field name="host" indexed="yes" stored="yes" />
			<field name="when" indexed="yes" stored="yes" />
			<field name="responseCode" indexed="yes" stored="yes" />
			<field name="robotsTxtStatus" indexed="yes" stored="yes" />
			<field name="parserStatus" indexed="yes" stored="yes" />
			<field name="fetchStatus" indexed="yes" stored="yes" />
			<field name="indexStatus" indexed="yes" stored="yes" />
		</fields>
	</schema>
	<requests>
		<request name="urlSearch" defaultOperator="and" start="0"
			rows="0">
			<query>$$</query>
			<returnFields>
				url,host,contentBaseType,contentTypeCharset,contentEncoding,contentLength,
				lang,langMethod,when,responseCode,
				robotsTxtStatus,parserStatus,fetchStatus,indexStatus</returnFields>
		</request>
		<request name="hostFacet" defaultOperator="or" start="0" rows="0">
			<query>$$</query>
			<facetFields>
				<facetField name="host" minCount="1" />
			</facetFields>
		</request>
	</requests>
</configuration>