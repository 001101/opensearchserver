<configuration>
	<indices>
		<index name="file" searchCache="100" filterCache="100"
			fieldCache="500" />
	</indices>
	<schema>
		<fields default="content" unique="uri">
			<field name="uri" indexed="yes" stored="yes" />
			<field name="originalUri" indexed="yes" stored="yes" />
			<field name="directoryUri" indexed="yes" stored="yes" />
			<field name="content" indexed="yes" stored="yes" />
			<field name="lang" indexed="yes" stored="yes" />
			<field name="langMethod" indexed="yes" stored="yes" />
			<field name="contentLength" indexed="yes" stored="yes" />
			<field name="when" indexed="yes" stored="yes" />
			<field name="parserStatus" indexed="yes" stored="yes" />
			<field name="fetchStatus" indexed="yes" stored="yes" />
			<field name="indexStatus" indexed="yes" stored="yes" />
			<field name="fileSystemDate" indexed="yes" stored="yes" />
			<field name="crawlDate" indexed="yes" stored="yes" />
			<field name="fileSize" indexed="yes" stored="yes" />
			<field name="fileExtension" indexed="yes" stored="yes" />
		</fields>
	</schema>
	<requests>
		<request name="fileSearch" defaultOperator="and" start="0"
			rows="0">
			<query>$$</query>
			<returnFields>
				uri,directoryUri,content,contentLength,
				lang,langMethod,when,parserStatus,fetchStatus,indexStatus,fileSystemDate,crawlDate,fileSize,fileExtension
			</returnFields>
		</request>
	</requests>
</configuration>