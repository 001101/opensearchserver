<configuration>
	<indices>
		<index name="file" searchCache="100" filterCache="100"
			fieldCache="500" />
	</indices>
	<schema>
		<fields default="path" unique="path">
			<field name="path" indexed="yes" stored="yes" />
			<field name="originalPath" indexed="yes" stored="yes" />
			<field name="lang" indexed="yes" stored="yes" />
			<field name="langMethod" indexed="yes" stored="yes" />
			<field name="contentBaseType" indexed="yes" stored="yes" />
			<field name="contentTypeCharset" indexed="yes" stored="yes" />
			<field name="contentEncoding" indexed="yes" stored="yes" />
			<field name="contentLength" indexed="yes" stored="yes" />
			<field name="outlink" indexed="yes" />
			<field name="inlink" indexed="yes" />
			<field name="when" indexed="yes" stored="yes" />
			<field name="responseCode" indexed="yes" stored="yes" />
			<field name="parserStatus" indexed="yes" stored="yes" />
			<field name="fetchStatus" indexed="yes" stored="yes" />
			<field name="indexStatus" indexed="yes" stored="yes" />
		</fields>
	</schema>
	<requests>
		<request name="fileSearch" defaultOperator="and" start="0"
			rows="0">
			<query>$$</query>
			<returnFields>
				path,originalPath,contentBaseType,contentTypeCharset,contentEncoding,contentLength,
				lang,langMethod,when,responseCode,parserStatus,fetchStatus,indexStatus
			</returnFields>
		</request>
	</requests>
</configuration>