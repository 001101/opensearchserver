<configuration>
	<indices>
		<index name="file" searchCache="100" filterCache="100"
			fieldCache="500" />
	</indices>
	<schema>
		<fields default="content" unique="uri">
			<field name="repository" indexed="yes" stored="no" termVector="yes" />
			<field name="uri" indexed="yes" stored="yes" termVector="yes" />
			<field name="directory" indexed="yes" stored="no" termVector="yes" />
			<field name="subDirectory" indexed="yes" stored="no"
				termVector="yes" />
			<field name="content" indexed="yes" stored="no" termVector="yes" />
			<field name="lang" indexed="yes" stored="no" termVector="yes" />
			<field name="langMethod" indexed="yes" stored="no" termVector="yes" />
			<field name="contentLength" indexed="yes" stored="no"
				termVector="yes" />
			<field name="parserStatus" indexed="yes" stored="no"
				termVector="yes" />
			<field name="fetchStatus" indexed="yes" stored="no" termVector="yes" />
			<field name="indexStatus" indexed="yes" stored="no" termVector="yes" />
			<field name="fileSystemDate" indexed="yes" stored="no"
				termVector="yes" />
			<field name="crawlDate" indexed="yes" stored="no" termVector="yes" />
			<field name="fileSize" indexed="yes" stored="no" termVector="yes" />
			<field name="fileExtension" indexed="yes" stored="no"
				termVector="yes" />
			<field name="fileType" indexed="yes" stored="no" termVector="yes" />
			<field name="md5size" indexed="yes" stored="no" termVector="yes" />
		</fields>
	</schema>
	<requests>
		<request name="fileSearch" defaultOperator="and" start="0"
			rows="0">
			<query>$$</query>
			<returnFields>
				repository,uri,directory,subDirectory,content,contentLength,
				lang,langMethod,parserStatus,fetchStatus,indexStatus,fileSystemDate
				crawlDate,fileSize,fileExtension,fileType
			</returnFields>
		</request>
		<request name="fileInfo" defaultOperator="and" start="0" rows="0">
			<query>$$</query>
			<returnFields>uri,fileSystemDate,fileType,parserStatus,fetchStatus,indexStatus
			</returnFields>
		</request>
	</requests>
</configuration>