<requests>

	<request name="fileSearch" phraseSlop="2" defaultOperator="OR"
		start="0" rows="10" lang="fr">

		<query>title:($$)^10 OR title:("$$")^10
			OR
			titleExact:($$)^10 OR titleExact:("$$")^10
			OR path:($$)^5 OR
			path:("$$")^5
			OR urlSplit:($$)^5 OR urlSplit:("$$")^5
			OR
			urlExact:($$)^5
			OR urlExact:("$$")^5
			OR content:($$) OR
			content:("$$")
			OR
			contentExact:($$) OR contentExact:("$$")</query>

		<returnFields>
			<field name="path" />
		</returnFields>

		<snippet>
			<field name="title" tag="b" maxDocChar="2147483647" separator="..."
				maxSnippetSize="200" maxSnippetNumber="1" fragmenterClass="NoFragmenter" />
			<field name="content" tag="b" maxDocChar="2147483647"
				separator="..." maxSnippetSize="200" maxSnippetNumber="1"
				fragmenterClass="SentenceFragmenter" />
		</snippet>

	</request>

</requests>
