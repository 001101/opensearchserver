<window apply="org.zkoss.bind.BindComposer"
	viewModel="@id('sorted') @init('com.jaeksoft.searchlib.web.controller.query.SortedController')">
	<grid model="@load(sorted.request.sortFieldList.list)">
		<columns>
			<column label="Index" />
			<column label="Field" />
			<column label="Direction" />
			<column label="Action" />
		</columns>
		<rows>
			<template name="model" var="sortfield">
				<row>
					<label
						value="@load(sortfield.joinNumber) @converter('com.jaeksoft.searchlib.web.converter.SortFieldJoinLabel')" />
					<label value="@load(sortfield.name)" />
					<label value="@load(sortfield.direction)" />
					<button label="Remove"
						onClick="@command('onSortRemove', sortfield=sortfield)" />
				</row>
			</template>
		</rows>
		<foot>
			<footer span="4">
				<listbox mold="select"
					selectedItem="@bind(sorted.selectedJoinSelect)"
					model="@load(sorted.joinSelectList)">
					<template name="model">
						<listitem label="@load(each)" />
					</template>
				</listbox>
				<listbox mold="select"
					selectedItem="@bind(sorted.selectedSort)"
					model="@load(sorted.sortFieldList)">
					<template name="model">
						<listitem label="@load(each)" />
					</template>
				</listbox>
				<listbox mold="select"
					selectedItem="@bind(sorted.selectedDirection)"
					model="@load(sorted.directionList)">
					<template name="model">
						<listitem label="@load(each)" />
					</template>
				</listbox>
				<button label="add sort field"
					onClick="@command('onSortAdd')" />
			</footer>
		</foot>
	</grid>
</window>