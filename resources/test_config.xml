<configuration>
	<indices>
		<index name="index" searchCache="128" filterCache="128"
			fieldCache="512" path="${root}/temp/index" />
	</indices>
	<schema>
		<analyzers>
			<analyzer name="LowerCase">
				<filter class="LowerCaseFilter" />
			</analyzer>
			<analyzer name="TextAnalyzer" lang="en"
				tokenizer="LetterOrDigitTokenizerFactory">
				<filter class="LowerCaseFilter" />
				<filter class="SnowballEnglishFilter" />
			</analyzer>
			<analyzer name="TextAnalyzer" lang="fr"
				tokenizer="LetterOrDigitTokenizerFactory">
				<filter class="LowerCaseFilter" />
				<filter class="ISOLatin1AccentFilter" />
				<filter class="FrenchStemFilter" />
			</analyzer>
			<analyzer name="TextAnalyzer" lang="de"
				tokenizer="LetterOrDigitTokenizerFactory">
				<filter class="LowerCaseFilter" />
				<filter class="ISOLatin1AccentFilter" />
				<filter class="SnowballGermanFilter" />
			</analyzer>
		</analyzers>
		<fields default="exactName" unique="exactName">
			<field name="exactName" indexed="yes" stored="yes" />
			<field name="searchName" indexed="yes" stored="no" analyzer="TextAnalyzer"
				termVector="positions_offsets" />
			<field name="description" indexed="yes" stored="compress"
				analyzer="TextAnalyzer" termVector="positions_offsets" />
			<field name="color" indexed="yes" stored="yes" analyzer="LowerCase" />
			<field name="type" indexed="yes" stored="yes" analyzer="LowerCase" />
			<field name="source" indexed="yes" stored="yes" analyzer="LowerCase" />
		</fields>
	</schema>
	<requests>
		<request name="search" defaultOperator="and" phraseSlop="2"
			start="0" rows="10" lang="fr">
			<query>exactName:($$) OR searchName:($$) OR
				description:($$) </query>
			<returnFields>exactName,color,type,source
			</returnFields>
			<facetFields>
				<facetField minCount="1" name="type" />
				<facetField minCount="0" name="source" />
				<facetField name="color" multivalued="yes" />
			</facetFields>
			<highlighting>
				<field tag="b" name="searchName" />
				<field tag="b" name="description" maxSnippetNumber="1"
					maxSnippetSize="200" separator="..." fragmenterClass="SentenceFragmenter" />
			</highlighting>
			<filters>
				<filter>type:fruit</filter>
			</filters>
		</request>
		<request name="minimal search" />
	</requests>
</configuration>