<window id="conf"
	use="com.jaeksoft.searchlib.web.controller.ConfigurationController">
	<grid model="@{conf.fields}">
		<columns>
			<column label="name" />
			<column width="80px" label="indexed" />
			<column width="80px" label="stored" />
			<column width="80px" label="termVector" />
			<column width="100px" label="analyzer" />
		</columns>
		<rows>
			<row self="@{each=field}">
				<label value="@{field.name}" />
				<label value="@{field.indexLabel}" />
				<label value="@{field.storeLabel}" />
				<label value="@{field.termVectorLabel}" />
				<label value="@{field.indexAnalyzer}" />
			</row>
		</rows>
	</grid>
</window>