<window id="pattern"
	use="com.jaeksoft.searchlib.web.controller.crawler.web.PatternController">
	<vbox width="99%">
		<label>For example:</label>
		<label>
			Enter http://www.open-search-server.com if you only want to
			crawl the home page
		</label>
		<label>
			Enter http://www.open-search-server.com/* if you want to
			crawl all the content
		</label>
		<label>
			Enter http://www.open-search-server.com/*wiki* if you only
			wish to crawl URLs containing the word "wiki" within the
			open-search-server.com domain.
		</label>
		<textbox multiline="true" rows="10" width="100%"
			value="@{pattern.pattern}" />
		<button label="Add" forward="onAdd" />
	</vbox>
	<separator />
	<hbox>
		<label>Filter:</label>
		<textbox cols="20" value="@{pattern.like}" />
		<space />
		<button label="Search" forward="onSearch" />
	</hbox>
	<listbox checkmark="true" multiple="true" itemRenderer="@{pattern}"
		model="@{pattern.patternList}">
		<listfoot>
			<listfooter>
				<paging id="paging" detailed="true"
					totalSize="@{pattern.totalSize}" pageSize="@{pattern.pageSize}"
					activePage="@{pattern.activePage}" />
			</listfooter>
		</listfoot>
	</listbox>
	<button label="delete" visible="@{pattern.selection}"
		forward="onDelete" />
</window>