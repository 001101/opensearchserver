<window id="browser"
	use="com.jaeksoft.searchlib.web.controller.crawler.file.BrowserController">

	<vbox width="99%">

		<listbox model="@{browser.files}"
			selectedItem="@{browser.selectedFile}"
			onSelect="browser.onReload()">
			<listhead>
				<listheader width="80px">
					<label>Directories :</label>
					<button label="Back" forward="onBack"
						visible="@{browser.myRoot}" />
					<button label="In" forward="onChoice"
						visible="@{browser.selectedFile.directory}" />
					<button label="Reset" forward="onReset" />

				</listheader>
			</listhead>
			<listitem self="@{each='field'}">
				<listcell label="@{field.path}" />
			</listitem>
		</listbox>

	</vbox>
	<hbox visible="@{browser.selectedFileSet}">
		<checkbox label="With all sub-directories"
			disabled="@{browser.selectedFile.file}" />
		<button label="Add it" forward="onAdd" />
	</hbox>

	<listbox checkmark="true" multiple="true" itemRenderer="@{browser}"
		model="@{browser.patternList}">
		<listfoot>
			<listfooter>
				<paging id="paging" detailed="true"
					totalSize="@{browser.totalSize}" pageSize="@{browser.pageSize}"
					activePage="@{browser.activePage}" />
			</listfooter>
		</listfoot>
	</listbox>
	<button label="delete" visible="@{browser.selection}"
		forward="onDelete" />
</window>