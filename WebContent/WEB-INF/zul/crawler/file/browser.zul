<window id="browser"
	use="com.jaeksoft.searchlib.web.controller.crawler.file.BrowserController">

	<vbox width="100%">
		<listbox id="filebrowser" model="@{browser.currentFileList}"
			selectedItem="@{browser.selectedFile}" height="250px">
			<listhead>
				<listheader label="Local file system">
					<space width="30px" />
					<label value="Path: " />
					<listbox model="@{browser.folderTree}"
						selectedItem="@{browser.currentFile}" mold="select"
						onSelect="browser.reloadPage()">
						<listitem self="@{each='filepath'}"
							value="@{filepath}">
							<listcell label="@{filepath.name}" />
						</listitem>
					</listbox>
					<button visible="@{browser.isNotRoot}"
						label="Parent folder" forward="onParentFolder" />
					<space width="30px" />
					<button label="Refresh the list"
						forward="onRefresh" />
				</listheader>
			</listhead>
			<listitem self="@{each='file'}">
				<listcell onDoubleClick="browser.onOpenFile(self)">
					<custom-attributes file="@{file}" />
					<image src="/images/file.png"
						visible="@{file.file}" />
					<image src="/images/directory.png"
						visible="@{file.directory}" />
					<label value="@{file.name}" />
				</listcell>
			</listitem>
			<listfoot>
				<listfooter>
					<hbox width="100%" align="center">
						<label value="@{browser.selectedFile}" />
						<space width="20px" />
						<checkbox id="filebrowsercheckboxsubdir"
							disabled="@{browser.noSelectedDir}"
							checked="@{browser.withSubDir}" />
						<label value="with sub-directory" />
						<space width="20px" />
						<button id="filebrowserbuttonadd"
							disabled="@{browser.noSelectedFile}" label="Add" forward="onAdd" />
					</hbox>
				</listfooter>
			</listfoot>
		</listbox>
	</vbox>

	<separator />

	<listbox model="@{browser.filePathItemList}"
		onSelect="browser.onSelectFilePathItem()"
		selectedItem="@{browser.selectedFilePathItem}" mold="paging"
		pageSize="20">
		<listhead>
			<listheader label="Selection" />
			<listheader label="With subdir" width="80px" />
			<listheader width="100px" />
		</listhead>
		<listitem self="@{each='filepathitem'}">
			<listcell>
				<custom-attributes file="@{filepathitem}" />
				<image src="/images/file.png"
					visible="@{filepathitem.filePath.file}" />
				<image src="/images/directory.png"
					visible="@{filepathitem.filePath.directory}" />
				<label value="@{filepathitem.filePath}" />
			</listcell>
			<listcell>
				<label value="@{filepathitem.withSubToString}" />
			</listcell>
			<listcell>
				<button label="remove"
					onClick="browser.onRemoveFilePath(self)">
					<custom-attributes filepath="@{filepathitem}" />
				</button>
			</listcell>
		</listitem>
	</listbox>

</window>