<window id="returned"
	use="com.jaeksoft.searchlib.web.controller.query.ReturnedController">
	<grid model="@{returned.request.returnFieldList.list}"
		rowRenderer="@{returned}">
		<columns>
			<column label="Field" />
			<column label="Action" />
		</columns>
		<foot visible="@{returned.fieldLeft}">
			<footer span="2">
				<listbox mold="select"
					selectedItem="@{returned.selectedReturn}"
					model="@{returned.returnFieldLeft}">
					<listitem self="@{each=returnField}"
						label="@{returnField}" />
				</listbox>
				<button label="add field" forward="onReturnAdd" />
			</footer>
		</foot>
	</grid>
</window>