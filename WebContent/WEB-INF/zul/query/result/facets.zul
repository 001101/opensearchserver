<window id="result"
	use="com.jaeksoft.searchlib.web.controller.query.ResultController"
	border="none">
	<hbox align="center">
		<label value="Select a facet" />
		<listbox model="@{result.facetList.list}" mold="select"
			selectedItem="@{result.selectedFacet}">
			<listitem self="@{each=facet}">
				<listcell label="@{facet.facetField.name}" />
			</listitem>
		</listbox>
	</hbox>

	<panel title="@{result.selectedFacet.facetField.name}" collapsible="true">
		<panelchildren>
			<listbox model="@{result.selectedFacet.array}" mold="paging"
				pageSize="10">
				<listhead>
					<listheader align="right" />
					<listheader />
				</listhead>
				<listitem self="@{each=item}">
					<listcell label="@{item.count}" />
					<listcell label="@{item.term}" />
				</listitem>
			</listbox>
		</panelchildren>
	</panel>

</window>